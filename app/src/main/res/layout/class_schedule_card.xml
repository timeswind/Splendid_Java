                    android:textColor="#444444"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="14:40-15:20"
                    android:textColor="#444444"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/schedule_eight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Ctrl-O"
                    android:textColor="#444444"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="15:20-16:00"
                    android:textColor="#444444"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/schedule_nine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Ctrl-O"
                    android:textColor="#444444"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#eeeeee"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="放學" />
            </TableRow>

        </TableLayout>

        <android.support.v7.widget.AppCompatButton
            android:layout_below="@+id/TodayScheduleTable"
            android:id="@+id/goToFullClassSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/check_all_schedule"
            android:theme="@style/CardButtonTeal"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>
